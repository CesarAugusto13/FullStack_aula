<h2>Editar Livro</h2>

<form action="/edit/save" method="POST">
    <input type="hidden" value="{{book.idbooks}}" name="id">
    <div>
        <label for="">Titulo:</label>
        <input type="text" name="title" placeholder="Digite o titulo" id="title" value="{{book.title}}"/>
    </div>
    <div>
        <label for="">Numero de Páginas:</label>
        <input type="number" name="pageqty" placeholder="Quantas páginas o livro possui?" id="pageqty" value="{{book.pageqty}}"/>
    </div>

    <button type="submit">Enviar</button>
</form>